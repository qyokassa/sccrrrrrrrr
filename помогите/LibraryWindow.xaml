<Window x:Class="помогите_.LibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:помогите_"
        mc:Ignorable="d"
        Title="LibraryWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="libraryListView" ItemsSource="{Binding Textbooks}" Margin="0,0,427,0" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Год" DisplayMemberBinding="{Binding Year}"/>
                    <GridViewColumn Header="Автор" DisplayMemberBinding="{Binding Author}"/>
                    <GridViewColumn Header="Контент" DisplayMemberBinding="{Binding Content}"/>
                    <GridViewColumn Header="Глава" DisplayMemberBinding="{Binding  Chapter}"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
