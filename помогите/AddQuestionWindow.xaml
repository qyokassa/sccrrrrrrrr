<Window x:Class="помогите_.AddQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:помогите_"
        mc:Ignorable="d"
        Title="AddQuestionWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Введите вопрос:"/>
        <TextBox x:Name="questionTextBox" Grid.Row="1" Margin="10,10,10,276"/>

        <Button Content="Сохранить" Grid.Row="2" HorizontalAlignment="Center" Margin="10" Click="SaveButton_Click"/>
    </Grid>
</Window>
