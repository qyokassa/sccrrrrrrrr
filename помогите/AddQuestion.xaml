<Window x:Class="помогите_.AddQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:помогите_"
        mc:Ignorable="d"
        Title="AddQuestion" Height="279" Width="441">
    <Grid Margin="0,0,0,-6">
        <Label Content="Введите вопрос:" Margin="10,10,10,229"/>
        <TextBox x:Name="txtQuestion" Margin="10,40,10,203" VerticalScrollBarVisibility="Auto"/>
        <Label Content="Правильный ответ:"  Margin="10,71,10,167"/>
        <TextBox x:Name="txtCorrectAnswer"  Margin="10,107,10,124"/>

        <Button Content="Сохранить" Click="Save_Click" Margin="77,206,94,20"/>
    </Grid>
</Window>
